@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="section-header">
    <h1>@ViewData["Title"]</h1>

    <div style="margin-top: 10px; font-size: 36px;">
        Associate your @ViewData["LoginProvider"] account.
    </div>
</div>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">
        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="login-card login-card-@(ViewData["LoginProvider"].ToString().ToLower()) mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">@ViewData["LoginProvider"]</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
                    Please enter an email address for this site below and click the Register button to finish
                    logging in.
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <div class="mdl-textfield mdl-js-textfield">
                        <input asp-for="Email" class="mdl-textfield__input" type="email">
                        <label asp-for="Email" class="mdl-textfield__label"></label>
                        <span asp-validation-for="Email" class="mdl-textfield__error"></span>
                    </div>

                    <button type="submit" class="btn btn-default mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                        Register
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
