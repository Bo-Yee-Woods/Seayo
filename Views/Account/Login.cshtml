@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="section-header">
    <h1>@ViewData["Title"]</h1>

    <div style="margin-top: 10px; font-size: 36px;">
        Login using one of the social network channel below.
    </div>
</div>

<form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    

    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--4-col">
            <externalLoginChannel sy-login-channel="Google" sy-login-message="Login with your Google account!"></externalLoginChannel>
        </div>
        
        <div class="mdl-cell mdl-cell--4-col">
            <externalLoginChannel sy-login-channel="Facebook" sy-login-message="Connect with your Facebook now."></externalLoginChannel>
        </div>

        <div class="mdl-cell mdl-cell--4-col">
            <externalLoginChannel sy-login-channel="Twitter" sy-login-message="Do you have Twitter account? Login now."></externalLoginChannel>
        </div>
    </div>
    

</form>

@section Scripts { 
    @await Html.PartialAsync("_ValidationScriptsPartial") 
}