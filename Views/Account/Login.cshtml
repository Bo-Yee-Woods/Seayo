@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="section-header">
    <h1>@ViewData["Title"]</h1>

    <div style="margin-top: 10px; font-size: 36px;">
        Login using one of the social network channel below.
    </div>
</div>

<form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    

    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--4-col">
            <div class="login-card login-card-google mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">Google</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    Login using your Google account here.
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <button type="submit" class="btn btn-default mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" 
                        name="provider" value="Google" title="Log in using your Google+ account">Login</button>
                </div>
            </div>
        </div>
        
        <div class="mdl-cell mdl-cell--4-col">
            <div class="login-card login-card-facebook mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">Facebook</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    Login using your Facebook account here.
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <button type="submit" class="btn btn-default mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" 
                        name="provider" value="Facebook" title="Log in using your Facebook account">Login</button>
                </div>
            </div>
        </div>

        <div class="mdl-cell mdl-cell--4-col">
            <div class="login-card login-card-twitter mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">Twitter</h2>
                </div>
                <div class="mdl-card__supporting-text">
                    Login using your Twitter account here.
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <button type="submit" class="btn btn-default mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" 
                        name="provider" value="Twitter" title="Log in using your Twitter account">Login</button>
                </div>
            </div>
        </div>
    </div>
    

</form>

@section Scripts { 
    @await Html.PartialAsync("_ValidationScriptsPartial") 
}