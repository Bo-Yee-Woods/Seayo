<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seayo</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/material-design-lite/material.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css" asp-fallback-href="~/lib/material-design-lite/material.min.css"
            asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>

<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header demo-layout-transparent">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title">Seayo</span>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <!-- Navigation -->
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Seayo</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" href="">Link</a>
                <a class="mdl-navigation__link" href="">Link</a>
                <a class="mdl-navigation__link" href="">Link</a>
                <a class="mdl-navigation__link" href="">Link</a>
            </nav>
        </div>
        <main class="mdl-layout__content">
            @RenderBody()

            <div style="height: 100px;">

            </div>

            <footer class="mdl-mega-footer">
                <div class="mdl-mega-footer__middle-section">

                    <div class="mdl-mega-footer__drop-down-section">
                        <input class="mdl-mega-footer__heading-checkbox" type="checkbox" checked>
                        <h1 class="mdl-mega-footer__heading">References</h1>
                        <ul class="mdl-mega-footer__link-list">
                            <li><a href="https://blogs.msdn.microsoft.com/webdev/2017/08/14/announcing-asp-net-core-2-0/" target="_blank">Announcing ASP.NET Core 2.0</a></li>
                            <li><a href="https://www.microsoft.com/net/core#macos" target="_blank">Install .NET and build your first app on macOS</a></li>
                            <li><a href="https://getmdl.io/started/index.html" target="_blank">Bower Installs Material Design</a></li>
                            <li><a href="https://stackoverflow.com/questions/33064164/usesqlserver-method-missing-mvc-6" target="_blank">UseSqlServer method missing MVC 6</a></li>
                        </ul>
                    </div>

                    <div class="mdl-mega-footer__drop-down-section">
                        <input class="mdl-mega-footer__heading-checkbox" type="checkbox" checked>
                        <h1 class="mdl-mega-footer__heading">Tools</h1>
                        <ul class="mdl-mega-footer__link-list">
                            <li><a href="https://www.nuget.org/packages/Microsoft.Extensions.SecretManager.Tools/2.0.0" target="_blank">[NuGet] Microsoft.Extensions.SecretManager.Tools</a></li>
                            <li><a href="https://docs.microsoft.com/en-us/ef/core/providers/sql-server/" target="_blank">Microsoft SQL Server EF Core Database Provider</a></li>
                            <li><a href="https://docs.microsoft.com/en-us/sql/linux/sql-server-linux-develop-use-vscode" target="_blank">Use Visual Studio Code to Connect to MS SQL Server</a></li>
                        </ul>
                    </div>

                    <div class="mdl-mega-footer__drop-down-section">
                        <input class="mdl-mega-footer__heading-checkbox" type="checkbox" checked>
                        <h1 class="mdl-mega-footer__heading">About GCL Projects</h1>
                        <ul class="mdl-mega-footer__link-list">
                            <li><a href="https://goh-chunlin.github.io" target="_blank">Goh Chun Lin</a></li>
                        </ul>
                    </div>

                    <div class="mdl-mega-footer__drop-down-section">
                        <input class="mdl-mega-footer__heading-checkbox" type="checkbox" checked>
                        <h1 class="mdl-mega-footer__heading">Project</h1>
                        <ul class="mdl-mega-footer__link-list">
                            <li><a href="https://github.com/goh-chunlin/Seayo" target="_blank">Github Repo</a></li>
                        </ul>
                    </div>

                </div>

                <div class="mdl-mega-footer__bottom-section">
                    <div class="mdl-logo">Seayo</div>
                    <ul class="mdl-mega-footer__link-list">
                        <li><a href="http://dotnet.sg" target="_blank">Singapore .NET Developers Community</a></li>
                    </ul>
                </div>

            </footer>
        </main>
    </div>

    

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/material-design-lite/material.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js" asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery" crossorigin="anonymous" integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">

            </script>
        <script src="https://code.getmdl.io/1.3.0/material.min.js" asp-fallback-src="~/lib/material-design-lite/material.min.js"
            asp-fallback-test="window.jQuery" crossorigin="anonymous" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">

            </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>

</html>