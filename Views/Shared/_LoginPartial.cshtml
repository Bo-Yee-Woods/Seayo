@using Microsoft.AspNetCore.Identity
@using Seayo.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <nav class="mdl-navigation">
            <a href="javascript:;" class="mdl-navigation__link" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            <a href="javascript:;" class="mdl-navigation__link" onclick="$('#logoutForm').submit();">Log out</a>
        </nav>
    </form>
}
else
{
    <nav class="mdl-navigation">
        <a class="mdl-navigation__link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
    </nav>
}
